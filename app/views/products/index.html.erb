<%
=begin
%>
<h1 class="current-category"><%= params[:category] %></h1>
<%= if @products.count == 0 %>
    <h1>Oops! Sorry! There are no products currently available in this category</h1>
    
<% else %>
    <% @products.each do |product| %>

    <h2><%= link_to product.name, product_path(product)  %><h2>
      <%= link_to Category.find(product.category_id).name, category_path(product.category_id) %>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
    <% end %>

<% end %>
 

<br>

<%= link_to 'Add New Cuisine', new_product_path %>

<%
=end
%>

<h1 class="display-3">All Products</h1>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% if @products.empty? %>
        <td>You have no products</td>
      <% end %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product&.name %></td>
          <td><%= product&.description %></td>
          <td><%= product&.price %></td>
          <td><%= product&.category&.name %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'Add New Cuisine', new_product_path %>

</div>

