<p id="notice"><%= notice %></p>

<h1>Sellers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sellers.each do |seller| %>
      <tr>

        <td><%= seller.first_name.capitalize + ' ' + seller.last_name.capitalize %></td>
        <td><%= seller.user.email if seller.user.email %></td>
        <td><%= seller.address if seller.address%></td>
        <td><%= "#{seller.phone[0..3]} #{seller.phone[4..6]} #{seller.phone[7..9]}" %></td>
        <td><%= link_to 'Show', seller %></td>
        <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
        <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

